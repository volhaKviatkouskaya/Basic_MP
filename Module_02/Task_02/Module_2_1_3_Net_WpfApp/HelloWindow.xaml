<Window x:Class="Module_2_1_3_Net_WpfApp.HelloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hello Window" Height="200" Width="250">
    <Grid>
        <TextBlock Text="{Binding Path=UserGreeting}" HorizontalAlignment="Center" Height="52" TextWrapping="Wrap"  VerticalAlignment="Center" Width="170" FontSize="20" TextAlignment="Center" RenderTransformOrigin="0.489,0.526"/>

    </Grid>
</Window>
